<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tang2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="136dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:layout_margin="10dp"
                    ><!-- Tùy chọn: đặt độ nâng của thẻ -->

                    <!-- Nội dung của CardView -->
                    <Button
                        android:id="@+id/btn_HoaDon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/button_background_initial"
                        android:text="Hóa đơn"
                        android:textColor="@color/button_text_initial"
                        app:backgroundTint="@null" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="136dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    android:layout_margin="10dp"><!-- Tùy chọn: đặt độ nâng của thẻ -->
                    <Button
                        android:id="@+id/btn_T1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tầng 1"
                        app:backgroundTint="@null"
                        android:background="@color/button_background_initial"
                        android:textColor="@color/button_text_initial"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="136dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    android:layout_margin="10dp">
                    <Button
                        android:id="@+id/btn_T2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/custom_seconds"
                        android:text="Tầng 2"
                        android:textColor="@color/button_text_change"
                        app:backgroundTint="@null" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="136dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    android:layout_margin="10dp">
                    <Button
                        android:id="@+id/btn_MV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Mang về"
                        app:backgroundTint="@null"
                        android:background="@color/button_background_initial"
                        android:textColor="@color/button_text_initial"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <GridView
            android:id="@+id/gridView_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:layout_marginTop="8dp"
            android:background="@color/custom_backgroudGrid"
            android:verticalSpacing="40dp"
            android:horizontalSpacing="20dp"
            />

    </LinearLayout>

</LinearLayout>