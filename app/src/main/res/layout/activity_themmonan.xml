<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thêm Món Ăn"
        android:textSize="32dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="@color/custom_seconds"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/anhMA"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/logo"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
        >
            <EditText
                android:id="@+id/TenMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background_radius"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:hint="Tên món ăn"
                android:textColor="@color/custom_black"
                />
            <EditText
                android:id="@+id/GiaTienMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/layout_background_radius"
                android:hint="Giá tiền"
                android:textColor="@color/custom_black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
            >
                <Spinner
                    android:id="@+id/spnLMA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:padding="15dp"
                    />

                <ImageButton
                    android:id="@+id/imgBtnThemLoai"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_add_circle_24"
                    android:layout_margin="10dp"
                    android:background="@color/custom_seconds"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnThemMA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="THÊM"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/layout_background_radius_green"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/btnThoatMA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="THOÁT"
            android:textColor="#ffffff"
            android:background="@drawable/layout_background_radius_red"
            android:layout_margin="10dp"
            />
    </LinearLayout>
</LinearLayout>