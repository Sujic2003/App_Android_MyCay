<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_HoaDon"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Hóa đơn"
                    android:background="@color/button_background_change"
                    app:backgroundTint="@null"
                    android:textColor="@color/button_text_change"/>


                <Button
                    android:id="@+id/btn_T1"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Tầng 1"
                    app:backgroundTint="@null"
                    android:background="@color/button_background_initial"
                    android:textColor="@color/button_text_initial"/>

                <Button
                    android:id="@+id/btn_T2"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/button_background_initial"
                    android:text="Tầng 2"
                    android:textColor="@color/button_text_initial"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn_MV"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Mang về"
                    app:backgroundTint="@null"
                    android:background="@color/button_background_initial"
                    android:textColor="@color/button_text_initial"/>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>